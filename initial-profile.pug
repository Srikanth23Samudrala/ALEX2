doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Profile - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    // Banner/hero section
    section#hero.jumbotron.text-center
      img(src="avatar.jpg", alt="User Avatar", class="img-fluid")
      h1.display-4 User Profile
      p.lead Edit your profile details

    // Profile Form
    section#profile-form.row
      div.col-md-6.mx-auto
        h2 Your Profile
        form(action="/Profile/create-profile", method="POST")
          .form-group
            label(for="avatar") Avatar:
            input.form-control(type="file", id="avatar", name="avatar")
          .form-group
            label(for="fullname") Full Name:
            input.form-control(type="text", id="fullname", name="fullname", required)
          .form-group
            label(for="username") Username:
            input.form-control(type="text", id="username", name="username", required)
          .form-group
            label(for="email") Email:
            input.form-control(type="email", id="email", name="email", required)
          .form-group
            label Privacy:
            input.form-control(type="checkbox", id="privacy", name="privacy", value="private")
            label(for="privacy") Private
          button.btn.btn-primary(type="submit") Update Profile


  include ./includes/footer.pug
