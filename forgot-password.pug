doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Forgot Password
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="your-css-styles.css", rel="stylesheet")

  body
    .container
      h1 Forgot Password
      p Enter your email address, and we'll send you a password reset link.

      form(action="/forgot-password", method="POST")
        .form-group
          label(for="email") Email:
          input.form-control(type="email", name="email", required)
        button.btn.btn-primary(type="submit") Reset Password
    
    script(src="your-js-scripts.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
include ./includes/footer.pug