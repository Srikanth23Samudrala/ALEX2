doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Game Logs - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css", rel="stylesheet")
    style.
      .log {
          border: 1px solid #ccc;
          padding: 10px;
          margin: 10px 0;
      }
      .expand-button {
          cursor: pointer;
          color: blue;
      }
  body
    // Navigation menu
    // Navigation menu
    include ./includes/navbar.pug

    // Game Logs
    section#game-logs.container
      h2 Game Logs
      // Dummy game logs
      .log
        p Game Log 1: This is a short game log entry.
      .log
        p Game Log 2: This is a longer game log entry that needs to be expanded to view more content.
        span.expand-button View More
      .log
        p Game Log 3: Another short game log entry.
      .log
        p Game Log 4: Yet another game log entry with more text that should be expandable.
        span.expand-button View More
      .log
        p Game Log 5: Short game log entry.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
