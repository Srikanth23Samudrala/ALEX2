doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Notifications - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css", rel="stylesheet")
    style.
      .notification {
          border: 1px solid #ccc;
          padding: 10px;
          margin: 10px 0;
      }
      .expand-button {
          cursor: pointer;
          color: blue;
      }
  body
    // Navigation menu
    include ./includes/navbar.pug

    // In-Game Notifications
    section#ingame-notifications.container
      h2 In-Game Notifications
      // Dummy in-game notifications
      .notification
        p Notification 1: This is a short in-game notification.
      .notification
        p Notification 2: This is a longer in-game notification that needs to be expanded to view more content.
        span.expand-button View More
      .notification
        p Notification 3: Another short in-game notification.
      .notification
        p Notification 4: Yet another in-game notification with more text that should be expandable.
        span.expand-button View More
      .notification
        p Notification 5: Short in-game notification.

    // Email Notifications
    section#email-notifications.container
      h2 Email Notifications
      // Dummy email notifications
      .notification
        p Email Notification 1: This is a short email notification.
      .notification
        p Email Notification 2: This is a longer email notification that needs to be expanded to view more content.
        span.expand-button View More
      .notification
        p Email Notification 3: Another short email notification.
      .notification
        p Email Notification 4: Yet another email notification with more text that should be expandable.
        span.expand-button View More
      .notification
        p Email Notification 5: Short email notification.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
