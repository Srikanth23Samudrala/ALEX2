doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login with Face - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
  body
    // Header
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="index.html") ALEX Project
    // Face Login Form
    section.container.mt-5
      h2 Login with Face
      video#video(style="width: 100%; max-width: 300px; margin: auto;")
      button#start-capture.btn.btn-primary.mt-3 Start Capture
    // JavaScript for Camera Access
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
    script.
      (function() {
        let video = document.getElementById('video');
        if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) {
          navigator.mediaDevices.getUserMedia({ video: true })
            .then(function(stream) {
              video.srcObject = stream;
            })
            .catch(function(error) {
              console.log('Camera access error: ', error);
            });
        }
        document.getElementById('start-capture').addEventListener('click', function() {
          // You can add face recognition logic here
          // For simplicity, this example only starts the camera without recognizing faces
          alert('Face recognition not implemented in this example.');
        });
      })();
