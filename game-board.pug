doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Game Dashboard - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css", rel="stylesheet") 
  body
    // Navigation menu
    include ./includes/navbar

    // Game Dashboard Layout
    section#game-dashboard.container-fluid
      .row
        // Leaderboard Score Table
        .col-md-3
          h2 Leaderboard
          table.table.table-striped
            thead
              tr
                th Player
                th Score
            tbody
              tr
                td Player 1
                td 100
              tr
                td Player 2
                td 90
              // Add more rows as needed

        // Category 1
        .col-md-2
          h2 Category 1
          ul.list-group
            li.list-group-item
              h5 Category 1.1
              p Score: 50
            li.list-group-item
              h5 Category 1.2
              p Score: 75

        // Category 2
        .col-md-2
          h2 Category 2
          ul.list-group
            li.list-group-item
              h5 Category 2.1
              p Score: 60
            li.list-group-item
              h5 Category 2.2
              p Score: 80

        // Category 3
        .col-md-2
          h2 Category 3
          ul.list-group
            li.list-group-item
              h5 Category 3.1
              p Score: 70
            li.list-group-item
              h5 Category 3.2
              p Score: 95

        // Category 4
        .col-md-2
          h2 Category 4
          ul.list-group
            li.list-group-item
              h5 Category 4.1
              p Score: 45
            li.list-group-item
              h5 Category 4.2
              p Score: 55

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
