doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title All Questions - Question Bank
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js", defer)
    style.
      /* Add your custom styles here */

  body
    // Display all questions
    section.container.mt-4
      h2 All Questions
      if questions.length > 0
        ul.list-group
          each question in questions
            li.list-group-item
              h4 Question: #{question.questionText}
              //- p Answers: #{question.answers}
              p Correct Answer: #{question.correctAnswer}
              p Difficulty: #{question.difficulty}
      else
        p No questions found.
