doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Profile - ALEX Project
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css", rel="stylesheet")
    
  body
    // Navigation menu
    include ./includes/navbar.pug
    
    // Banner/hero section
    section#hero.jumbotron.text-center
      h2.display-4 User Profile
      img(src="https://i.pravatar.cc/150", alt="User Avatar", class="img-fluid")
      p.lead Welcome, #{user.fullname}

    // Profile Details
    section#profile-details.row
      div.col-md-6.mx-auto
        h2 Your Profile
        ul.list-group
          li.list-group-item
            strong Full Name:
            | #{user.fullname}
          li.list-group-item
            strong Username:
            | #{user.username}
          li.list-group-item
            strong Email:
            | #{user.email}

    // Navigation menu (Use the existing navigation code)

    // Brief Description (Use the existing description code)

    // Footer (Use the existing footer code)
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
